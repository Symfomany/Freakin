    <div class="offset1">
        <form action="{{ path('inscription') }}"  method="post" id="inscription">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_widget(form.firstname,{'attr' : { 'class': 'form-control' }}) }}
                        <span class="input-icon fui-new"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_widget(form.lastname,{'attr' : { 'class': 'form-control' }}) }}
                        <span class="input-icon fui-new"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                       {{ form_widget(form.email,{'attr' : { 'class': 'form-control' }}) }}
                        <span class="input-icon fui-mail"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{ form_widget(form.password,{'attr' : { 'class': 'form-control' }}) }}
                        <span class="input-icon fui-lock"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" id="bosser">Je veux bosser</button>
        </form>
        <hr class="clear" />
            <a href=""><img src="http://www.ottawacafes.com/images/facebook-connect-button.png?1380893987" /></a>
            <a href=""><img src="http://blog.logic-immo.com/wp-content/plugins/simple-twitter-connect/images/Sign-in-with-Twitter-darker.png" /></a>
            <a href=""><img src="http://www.justinclick.com/assets/images/google_connect_button.png" /></a>
            <a href=""><img style="width: 112px;" src="http://www.keylance.org/sites/default/files/image/linkedin_button.gif" /></a>
            <div class="clear"></div>
            {#{{ form_rest(form) }}#}
    </div>

