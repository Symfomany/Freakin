{% extends 'MyFuckinJobSiteBundle::layout.html.twig' %}

{% block content %}

    <h2><span class="fui-plus"></span> Inscription étape 1</h2>

    <ol class="breadcrumb">
        <li><a href="#">Inscription étape 1</a></li>
        <li><a href="#">Inscription étape 2</a></li>
        <li><a href="#">Inscription étape 3</a></li>
